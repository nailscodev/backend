# Application
PORT=3001
NODE_ENV=production
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Database - Option 1: DATABASE_URL (Render, Heroku, etc.)
# Render automatically provides DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/database

# Database - Option 2: Individual variables (local development)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=nailsandco

# Sequelize Configuration
DB_SYNC=false
DB_LOGGING=false
DB_FORCE=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_make_it_secure_and_random
JWT_EXPIRES_IN=1d

# Encryption Key (exactly 32 characters for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_

# Email (for future notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
SMTP_FROM=noreply@nailsandco.com

# Application Settings
API_PREFIX=api/v1
ENABLE_SWAGGER=true
SWAGGER_PATH=api/docs

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads